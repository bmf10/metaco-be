{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "pretty": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "sourceMap": true,
    "target": "ES2019",
    "lib": ["ES2019"],
    "baseUrl": "./src",
    "paths": {
      "models/*": ["models/*", "models/*/index"],
      "services/*": ["services/*", "services/*/index"],
      "utils/*": ["utils/*", "utils/*/index"],
      "middleware/*": ["middleware/*", "middleware/*/index"]
    },
    "outDir": "build"
  }
}
